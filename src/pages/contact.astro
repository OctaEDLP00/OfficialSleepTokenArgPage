---
import FAQ from '~/components/contact/FAQ.astro'
import ContactForm from '~/components/contact/ContactForm.astro'
import ContactMethod from '~/components/contact/ContactMethod.astro'
import Hero from '~/components/contact/Hero.astro'
import Team from '~/components/contact/Team.astro'
import Layout from '~/layouts/Layout.astro'
import { getLangFromURL, useTranslation } from '~/i18n/utils'

const lang = getLangFromURL(Astro.url)
const t = useTranslation(lang)
---

<Layout
  title={t('contact.page.title')}
  description={t('contact.page.description')}
>
  <Hero />
contact.page.title  <main class='pb-32'>
    <div class='mx-auto max-w-6xl px-4'>
      <div class='grid gap-12 lg:grid-cols-2'>
        <ContactForm />
        <div class='space-y-8'>
          <ContactMethod />
          <Team />
          <FAQ />
        </div>
      </div>
    </div>
  </main>
</Layout>
