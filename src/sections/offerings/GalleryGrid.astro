  },
  {
    text: 'Retrato',
    Icon: Portrait,
  },
  {
    text: 'Cover',
    Icon: Cover,
  },
] satisfies Array<{ text: string; Icon: Icon }>

const ARTWORK_CARDS = [
  {
    title: 'Take MeBack To Eden',
    by: 'Vessel_BA',
    filter: 'Pintura',
    image: {
      alt: '',
      height: '',
      src: '',
