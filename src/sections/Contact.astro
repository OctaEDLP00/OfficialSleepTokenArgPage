---
import ContactCard from '~/components/ContactCard.astro'
import ContactForm from '~/components/ContactForm.astro'
import { CONTACTS_INFO, SOCIAL_NETWORKS } from '~/constants/index'
---

<section
	id='contacto'
	class='bg-ritual-900 py-24'
>
	<div class='container mx-auto px-6'>
		<div class='mb-16 flex flex-col items-center justify-between md:flex-row'>
			<h2 class='font-ritual mb-4 text-4xl md:mb-0 md:text-5xl'>CONTACTO</h2>
			<div class='bg-vessel-500/50 h-px w-full max-w-xs'></div>
		</div>

		<div class='grid grid-cols-1 gap-12 md:grid-cols-2'>
			<div>
				<div class='mb-8'>
					<h3 class='font-ritual mb-4 text-2xl'>COMUNÍCATE CON NOSOTROS</h3>
					<p class='text-gray-400'>
						¿Tienes preguntas, sugerencias o quieres colaborar con la comunidad de Sleep Token
						Argentina? Estamos aquí para escucharte.
					</p>
				</div>

				<div class='space-y-6'>
					{
						CONTACTS_INFO.map(({ label, value, icon }) => (
							<ContactCard
								type='contact'
								Icon={icon}
								label={label}
								value={value}
							/>
						))
					}
				</div>

				<div class='mt-12'>
					<h3 class='font-ritual mb-4 text-2xl'>SÍGUENOS</h3>
					<div class='flex space-x-4'>
						{
							SOCIAL_NETWORKS.map(({ icon, href }) => (
								<ContactCard
									type='social'
									Icon={icon}
									href={href}
								/>
							))
						}
					</div>
				</div>
			</div>

			<div>
				<ContactForm />
			</div>
		</div>
	</div>
</section>
