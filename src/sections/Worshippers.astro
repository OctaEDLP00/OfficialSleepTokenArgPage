---
import Testimonial from '~/components/Testimonial.astro'
import WorshippersForm from '~/components/WorshippersForm.astro'
import { TESTIMONIALS } from '~/constants/index'
---

<section
	id='adoradores'
	class='bg-ritual-800 py-24'
>
	<div class='container mx-auto px-6'>
		<div class='mb-16 flex flex-col items-center justify-between md:flex-row'>
			<h2 class='font-ritual mb-4 text-4xl md:mb-0 md:text-5xl'>ADORADORES</h2>
			<div class='bg-vessel-500/50 h-px w-full max-w-xs'></div>
		</div>

		<div class='mb-16 grid grid-cols-1 gap-8 md:grid-cols-3'>
			<div class='col-span-1 md:col-span-2'>
				<h3 class='font-ritual mb-6 text-2xl md:text-3xl'>TESTIMONIOS DE LA COMUNIDAD</h3>
				<div class='space-y-8'>
					{
						TESTIMONIALS.map(({ name, message, since, src }) => (
							<Testimonial
								name={name}
								message={message}
								since={since}
								src={src}
							/>
						))
					}
				</div>
			</div>

			<div>
				<div class='bg-ritual-900 flex h-full flex-col rounded-sm p-6'>
					<h3 class='font-ritual mb-6 text-center text-2xl'>ÚNETE A NOSOTROS</h3>
					<div class='mb-8 text-center'>
						<div
							class='clip-diamond bg-vessel-500/20 mx-auto mb-4 flex h-24 w-24 items-center justify-center'
						>
							<div class='clip-diamond bg-vessel-500/40 flex h-16 w-16 items-center justify-center'>
								<div
									class='font-ritual text-vessel-500 text-4xl'
									id='member-count'
								>
									1,247
								</div>
							</div>
						</div>
						<p class='text-gray-400'>Adoradores en Argentina</p>
					</div>

					<WorshippersForm />
				</div>
			</div>
		</div>

		<!-- Gallery -->
		<div class='mt-20'>
			<h3 class='font-ritual mb-8 text-2xl md:text-3xl'>GALERÍA DE ADORADORES</h3>

			<div class='grid grid-cols-2 gap-4 md:grid-cols-4'>
				<div class='aspect-square overflow-hidden'>
					<img
						src='/placeholder.svg?height=300&width=300'
						alt='Fan Photo'
						class='h-full w-full cursor-pointer object-cover transition-transform duration-500 hover:scale-110'
					/>
				</div>
				<div class='aspect-square overflow-hidden'>
					<img
						src='/placeholder.svg?height=300&width=300'
						alt='Fan Photo'
						class='h-full w-full cursor-pointer object-cover transition-transform duration-500 hover:scale-110'
					/>
				</div>
				<div class='aspect-square overflow-hidden'>
					<img
						src='/placeholder.svg?height=300&width=300'
						alt='Fan Photo'
						class='h-full w-full cursor-pointer object-cover transition-transform duration-500 hover:scale-110'
					/>
				</div>
				<div class='aspect-square overflow-hidden'>
					<img
						src='/placeholder.svg?height=300&width=300'
						alt='Fan Photo'
						class='h-full w-full cursor-pointer object-cover transition-transform duration-500 hover:scale-110'
					/>
				</div>
			</div>

			<div class='mt-8 text-center'>
				<a
					href='#'
					class='border-vessel-500 text-vessel-500 hover:bg-vessel-500 inline-block rounded-sm border px-6 py-3 font-medium transition-colors hover:text-white'
				>
					Ver Más Fotos
				</a>
			</div>
		</div>
	</div>
</section>
