<form
	id='contact-form'
	class='bg-ritual-800 rounded-sm p-8'
>
	<h3 class='font-ritual mb-6 text-2xl'>ENVÍANOS UN MENSAJE</h3>

	<div class='space-y-4'>
		<div>
			<label
				for='name'
				class='mb-1 block text-sm font-medium'
				>Nombre</label
			>
			<input
				type='text'
				id='name'
				class='bg-ritual-700 border-ritual-600 focus:border-vessel-500 w-full rounded-sm border p-3 text-white focus:outline-none'
			/>
		</div>

		<div>
			<label
				for='email'
				class='mb-1 block text-sm font-medium'
				>Email</label
			>
			<input
				type='email'
				id='email'
				class='bg-ritual-700 border-ritual-600 focus:border-vessel-500 w-full rounded-sm border p-3 text-white focus:outline-none'
			/>
		</div>

		<div>
			<label
				for='subject'
				class='mb-1 block text-sm font-medium'
				>Asunto</label
			>
			<select
				id='subject'
				class='bg-ritual-700 border-ritual-600 focus:border-vessel-500 w-full rounded-sm border p-3 text-white focus:outline-none'
			>
				<option
					disabled
					selected
				>
					- Selecciona un asunto -
				</option>
				<option value='eventos'>Eventos</option>
				<option value='colaboracion'>Colaboración</option>
				<option value='merchandise'>Merchandise</option>
				<option value='otro'>Otro</option>
			</select>
		</div>

		<div>
			<label
				for='message'
				class='mb-1 block text-sm font-medium'
				>Mensaje</label
			>
			<textarea
				id='message'
				rows='5'
				class='bg-ritual-700 border-ritual-600 focus:border-vessel-500 w-full rounded-sm border p-3 text-white focus:outline-none'
			></textarea>
		</div>

		<div class='pt-4'>
			<button
				type='submit'
				class='bg-vessel-500 hover:bg-vessel-400 w-full rounded-sm p-3 font-medium transition-colors'
			>
				Enviar Mensaje
			</button>
		</div>
	</div>
</form>
