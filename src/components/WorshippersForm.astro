---
import { Provinces } from '~/constants/index'
---

<form
	id='join-form'
	class='flex-grow space-y-4'
	method='post'
	action='/api/join'
>
	<div>
		<input
			type='text'
			placeholder='Nombre'
			name='name'
			class='bg-ritual-700 border-ritual-600 focus:border-vessel-500 w-full rounded-sm border p-3 text-white focus:outline-none'
		/>
	</div>
	<div>
		<input
			type='email'
			placeholder='Email'
			name='email'
			class='bg-ritual-700 border-ritual-600 focus:border-vessel-500 w-full rounded-sm border p-3 text-white focus:outline-none'
		/>
	</div>
	<div>
		<select
			name='province'
			class='bg-ritual-700 border-ritual-600 focus:border-vessel-500 w-full rounded-sm border p-3 text-white focus:outline-none'
		>
			<option
				selected
				disabled
			>
				- Provincia -
			</option>
			{Provinces.map(({ text, value }) => <option value={value}>{text}</option>)}
		</select>
	</div>
	<div class='mt-auto pt-4'>
		<button
			type='submit'
			class='bg-vessel-500 hover:bg-vessel-400 w-full rounded-sm p-3 font-medium transition-colors'
		>
			Unirse a la Comunidad
		</button>
	</div>
</form>
