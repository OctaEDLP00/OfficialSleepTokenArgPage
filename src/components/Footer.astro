---
import { getLangFromURL, useTranslation } from '~/i18n/utils'
import Instagram from '~/assets/instagram.svg'
import X from '~/assets/x.svg'
import Discord from '~/assets/discord.svg'

const lang = getLangFromURL(Astro.url)
const t = useTranslation(lang)
---

<footer class='bg-ritual-800 border-eia-600/20 border-t py-12'>
  <div class='mx-auto max-w-6xl px-4'>
    <div class='grid gap-8 md:grid-cols-4'>
      <div class='space-y-4'>
        <h3 class='text-eia-500 text-xl font-semibold'>{t('footer.title')}</h3>
        <p class='text-gray-400'>{t('footer.paragraph')}</p>
      </div>
      <div class='space-y-4'>
        <h4 class='text-eia-300 font-semibold'>{t('footer.links')}</h4>
        <ul class='space-y-2 text-gray-400'>
          <li>
            <a
              href='/discography'
              class='hover:text-eia-500 transition-colors'
              >{t('nav.ul.discographies')}</a
            >
          </li>
          <li>
            <a
              href='/rituals'
              class='hover:text-eia-500 transition-colors'
              >{t('nav.ul.rituals')}</a
            >
          </li>
          <li>
            <a
              href='/worshippers'
              class='hover:text-eia-500 transition-colors'
              >{t('nav.ul.worshippers')}</a
            >
          </li>
        </ul>
      </div>
      <div class='space-y-4'>
        <h4 class='text-eia-300 font-semibold'>{t('footer.community')}</h4>
        <ul class='space-y-2 text-gray-400'>
          <li>
            <a
              href='/offerings'
              class='hover:text-eia-500 transition-colors'
              >{t('nav.ul.offerings')}</a
            >
          </li>
          <li>
            <a
              href='newsletter.html'
              class='hover:text-eia-500 transition-colors'
              >{t('nav.ul.newsletter')}</a
            >
          </li>
          <li>
            <a
              href='contacto.html'
              class='hover:text-eia-500 transition-colors'
              >{t('nav.ul.contact')}</a
            >
          </li>
        </ul>
      </div>
      <div class='space-y-4'>
        <h4 class='text-eia-300 font-semibold'>{t('footer.social')}</h4>
        <div class='flex flex-row space-x-3 md:flex-col md:space-y-3'>
          <a
            href='https://www.instagram.com/sleeptoken.arg/'
            class='hover:text-eia-500 text-gray-400 transition-colors'
          >
            <Instagram class='size-6' />
          </a>
          <a
            href='https://x.com/SleepTokenArg'
            class='hover:text-eia-500 text-gray-400 transition-colors'
          >
            <X class='size-6' />
          </a>
          <a
            href='https://discord.gg/'
            class='hover:text-eia-500 text-gray-400 transition-colors'
          >
            <Discord class='size-6' />
          </a>
        </div>
      </div>
    </div>
    <div class='border-eia-600/20 mt-8 border-t pt-8 text-center text-gray-400'>
      <p>&copy; {new Date().getFullYear()} {t('footer.copyright')}</p>
    </div>
  </div>
</footer>
