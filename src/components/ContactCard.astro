---
interface Props {
	type: 'contact' | 'social'
	Icon: ((_props: astroHTML.JSX.SVGAttributes) => any) & ImageMetadata
	href?: string
	value?: string
	label?: string
}

const { type, Icon, href, label, value } = Astro.props
---

{
	type === 'contact' ? (
		<div class='flex items-start'>
			<div class='bg-ritual-800 mr-4 flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-sm'>
				<Icon />
			</div>
			<div>
				<h4 class='mb-1 font-medium'>{label}</h4>
				<p class='text-gray-400'>{value}</p>
			</div>
		</div>
	) : (
		<a
			href={href}
			class='bg-ritual-800 hover:bg-vessel-500 flex h-12 w-12 items-center justify-center rounded-sm transition-colors'
		>
			<Icon />
		</a>
	)
}
