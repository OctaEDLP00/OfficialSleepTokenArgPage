---
import { getLangFromURL, useTranslation } from '~/i18n/utils'

const lang = getLangFromURL(Astro.url)
const t = useTranslation(lang)
---

<header class='relative flex min-h-screen items-center justify-center overflow-hidden'>
  <div class='from-ritual-900 via-ritual-800 to-ritual-700 absolute inset-0 bg-gradient-to-br'>
  </div>
  <div
    class="absolute inset-0 bg-[url('/images/wallpapers/1568466268484.webp')] bg-cover opacity-50"
  >
  </div>

  <div class='relative z-10 mx-auto max-w-4xl px-4 text-center'>
    <h1
      class='from-eia-500 to-eia-300 mb-6 bg-gradient-to-r bg-clip-text text-6xl font-bold text-transparent md:text-8xl'
    >
      SLEEP TOKEN
    </h1>
    <h2 class='text-eia-300 mb-8 text-2xl font-light md:text-3xl'>{t('hero.community')}</h2>
    <p class='mx-auto mb-12 max-w-2xl text-lg leading-relaxed text-gray-300 md:text-xl'>
      {t('hero.paragraph')}
    </p>

    <!-- CTA BUTTONS COMPONENT -->
    <div class='flex flex-col justify-center gap-4 sm:flex-row'>
      <a
        href='/discography'
        class='bg-eia-500 hover:bg-eia-300 text-ritual-900 transform rounded-full px-8 py-4 font-semibold transition-all duration-300 hover:scale-105'
      >
        {t('hero.ctaButton.discographies')}
      </a>
      <a
        href='/rituals'
        class='border-eia-500 text-eia-500 hover:bg-eia-500 hover:text-ritual-900 rounded-full border-2 px-8 py-4 font-semibold transition-all duration-300'
      >
        {t('hero.ctaButton.rituals')}
      </a>
    </div>
  </div>
</header>
