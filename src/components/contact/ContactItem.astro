---
interface Props {
  title: string
  subtitle: string
  description: string
}

const { title, description, subtitle } = Astro.props
---

<div class='flex items-start space-x-4'>
  <div class='bg-eia-500/20 flex size-17 flex-shrink-0 items-center justify-center rounded-lg'>
    <slot />
  </div>
  <div>
    <h3 class='text-eia-300 mb-1 font-semibold'>{title}</h3>
    <p class='text-gray-300'>{subtitle}</p>
    <p class='text-sm text-gray-400'>{description}</p>
  </div>
</div>
