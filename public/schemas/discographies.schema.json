{
  "title": "",
  "description": "",
  "type": "object",
  "properties": {
    "albums": { "$ref": "#/$defs/Album" },
    "eps": { "$ref": "#/$defs/Eps" }
  },
  "$defs": {
    "Album": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/AlbumInfo",
        "additionalProperties": false
      }
    },
    "Eps": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/AlbumInfo",
        "additionalProperties": false
      }
    },
    "AlbumInfo": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "duration": { "type": "string" },
        "songs": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Song",
            "additionalProperties": false
          }
        },
        "image": {
          "$ref": "#/$defs/Image",
          "additionalProperties": false
        },
        "releaseDate": {
          "anyOf": [{ "type": ["string"] }, { "type": "string" }]
        },
        "slug": { "type": "string" }
      },
      "required": ["name", "duration", "songs", "image", "releaseDate", "slug"]
    },
    "Song": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "duration": { "type": "string" },
        "customImageCover": { "type": "string" },
        "explicit": { "type": "boolean", "default": false }
      },
      "required": ["name", "duration", "explicit"]
    },
    "Image": {
      "type": "object",
      "properties": {
        "src": { "type": "string" },
        "alt": { "type": "string" },
        "width": {
          "anyOf": [
            { "type": "string", "default": "" },
            { "type": "number", "default": 0 },
            { "type": "null" }
          ]
        },
        "height": {
          "anyOf": [
            { "type": "string", "default": "" },
            { "type": "number", "default": 0 },
            { "type": "null" }
          ]
        }
      },
      "required": ["alt", "src"]
    }
  }
}
